root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile,*.mk]
indent_style = tab
indent_size = 4

[*.sql]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{tf,tfvars,hcl,tftest.hcl}]
indent_style = space
indent_size = 2
